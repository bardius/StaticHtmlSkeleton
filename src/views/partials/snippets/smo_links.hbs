<!--  ==========================  -->
<!--  === Social media Links ===  -->
<!--  ==========================  -->
<div id="smoLinks" class="large-12 small-12 columns">
    <div class="menu-centered">
        <div class="large-12 small-12 columns smo-icons">
            <ul class="menu-smo menu simple">
                <li>
                    <a class="badge button fbIcon"
                       href="https://www.facebook.com/sharer.php?m2w&amp;s=100&amp;p[title]={{encodeURI @root.title}}{{encodeURI ' | '}}{{encodeURI @root.siteName}}&amp;p[summary]={{encodeURI @root.fb_description}}&amp;p[url]={{encodeURI @root.siteURL}}{{encodeURI @root.pageURL}}&amp;p[images][0]={{encodeURI @root.siteURL}}{{encodeURI '/images/favicons/logo_media.jpg'}}"
                       title="Share on Facebook" rel="external" target="_blank">
                        <i class="fi-social-facebook"></i><span class="show-for-sr">Share on Facebook</span>
                    </a>
                </li>
                <li>
                    <a class="badge button tweetIcon"
                       href="https://twitter.com/share?text={{encodeURI @root.title}}{{encodeURI ' | '}}{{encodeURI @root.siteName}}&amp;url={{encodeURI @root.siteURL}}{{encodeURI @root.pageURL}}"
                       title="Share on Twitter" rel="external" target="_blank">
                        <i class="fi-social-twitter"></i><span class="show-for-sr">Share on Twitter</span>
                    </a>
                </li>
                <li>
                    <a class="badge button pinterestIcon"
                       href="//pinterest.com/pin/create/button/?url={{encodeURI @root.siteURL}}{{encodeURI @root.pageURL}}&amp;description={{encodeURI @root.title}}{{encodeURI ' | '}}{{encodeURI @root.siteName}}&amp;media={{encodeURI @root.siteURL}}{{encodeURI '/images/favicons/logo_media.jpg'}}"
                       title="Share on Pinterest" rel="external" target="_blank">
                        <i class="fi-social-pinterest"></i><span class="show-for-sr">Share on Pinterest</span>
                    </a>
                </li>
                <li>
                    <a class="badge button linkedinIcon"
                       href="http://www.linkedin.com/shareArticle?mini=true&amp;url={{encodeURI @root.siteURL}}{{encodeURI @root.pageURL}}&amp;title={{encodeURI @root.title}}{{encodeURI ' | '}}{{encodeURI @root.siteName}}"
                       title="Share This on LinkedIn" rel="external" target="_blank">
                        <i class="fi-social-linkedin"></i><span class="show-for-sr">Share This on LinkedIn</span>
                    </a>
                </li>
                <li>
                    <a class="badge button gplusIcon"
                       href="https://plus.google.com/share?url={{encodeURI @root.siteURL}}{{encodeURI @root.pageURL}}"
                       title="Share This on Google+" rel="external" target="_blank">
                        <i class="fi-social-google-plus"></i><span class="show-for-sr">Share This on Google+</span>
                    </a>
                </li>
                <li>
                    <a class="badge button emailItem"
                       href="mailto:?subject={{encodeURI @root.title}}{{encodeURI ' | '}}{{encodeURI @root.siteName}}&amp;body={{encodeURI @root.title}}{{encodeURI ' | '}}{{encodeURI @root.siteName}} {{encodeURI 'was shared to you. Check it out at '}}{{encodeURI @root.siteURL}}{{encodeURI @root.pageURL}}"
                       title="Share by Email" rel="external">
                        <i class="fi-mail"></i><span class="show-for-sr">Share by Email</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
